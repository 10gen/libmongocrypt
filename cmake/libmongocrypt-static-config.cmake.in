set (MONGOCRYPT_STATIC_VERSION @PROJECT_VERSION@)

@PACKAGE_INIT@

set_and_check (MONGOCRYPT_STATIC_INCLUDE_DIRS "@PACKAGE_INCLUDE_INSTALL_DIRS@")

# We want to provide an absolute path to the library and we know the
# directory and the base name, but not the suffix, so we use CMake's
# find_library () to pick that up.  Users can override this by configuring
# MONGOCRYPT_STATIC_LIBRARY themselves.
find_library (MONGOCRYPT_STATIC_LIBRARY mongocrypt-static PATHS "@PACKAGE_LIBRARY_INSTALL_DIRS@" NO_DEFAULT_PATH)

set (MONGOCRYPT_STATIC_LIBRARIES ${MONGOCRYPT_STATIC_LIBRARY})

foreach (LIB @LIBMONGOCRYPT_LIBRARIES@)
    list (APPEND MONGOCRYPT_STATIC_LIBRARIES ${LIB})
endforeach ()

set (MONGOCRYPT_STATIC_DEFINITIONS MONGOCRYPT_STATIC)
